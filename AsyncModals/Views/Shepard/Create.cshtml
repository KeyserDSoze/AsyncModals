@model Shepard
@{
    Layout = null;
}

<form asp-controller="Shepard" asp-action="Modify" asp-route-id="@ViewBag.SheepId" data-ajax="true" data-ajax-method="POST" data-ajax-success="onSuccess">
    <div class="form-horizontal">
        <div class="panel-body">

            <div class="form-group">
                <label asp-for="Name" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div asp-validation-summary="All" class="" text-danger"></div>
            <input type="submit" value="Save Shepard" class="btn btn-success pull-right" />
        </div>
    </div>
</form>

